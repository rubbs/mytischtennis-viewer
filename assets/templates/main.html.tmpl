<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/main.css" rel="stylesheet" >
  </head>
  <body>
    <div class="text-center">
      <div class="row">
        <div class="col-lg-5 h1">{{ .Home }}</div>
        <div class="col-lg-2">-</div>
        <div class="col-lg-5 h1">{{ .Away }}</div>
      <div>

      <div class="row">
        <div class="col col-lg-2 align-self-center">
          <span class="points">{{ .HomePoints }}</span>
        </div>
        <div class="col-lg-8">
          <table class="table table-striped table-bordered">
            <tbody>
            {{range .Matches}}
              <tr>
              
                <th scope="row">
                  {{ .Name }}
                </th>
                <td>
                  {{ .Home }}
                </td>
                <td>
                  {{ .Away }}
                </td>
                <td>
                  <div class="row">
                    {{range .Balls }}
                    <div class="col col-lg-2">{{.}}</div>
                  {{end}}
                  </div>
                </td>
                <td>
                  {{ .Set }}
                </td>
                <td>
                  {{ .Result }}
                </td>
            </tr>
            
            {{end}}
            </tbody>
          </table>
        </div>
        <div class="col col-lg-2 align-self-center">
          <span class="points">{{ .AwayPoints }}</span>
        </div>
      </div>


